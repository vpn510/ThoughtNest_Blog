<!DOCTYPE html>
<html lang="en">

<head>
   <%- include('./partials/head') %>
      <title>Homepage</title>
      <style>
         body {
            background-color: #f5fff5;
         }

         h5.card-title {
            color: #339933;
            font-weight: 600;
         }

         .btn-outline-primary {
            border-color: #66cc66;
            color: #66cc66;
         }

         .btn-outline-primary:hover {
            background-color: #66cc66;
            color: white;
         }

         .card {
            border: 1px solid #66cc66;
            transition: transform 0.2s ease-in-out;
         }

         .card:hover {
            transform: scale(1.02);
            box-shadow: 0 4px 12px rgba(102, 204, 102, 0.3);
         }

         .card-img-top {
            object-fit: cover;
            height: 200px;
         }
      </style>
</head>

<body>
   <%- include('./partials/nav') %>

      <main class="container py-4">
         <section class="row">
            <% blogs.forEach(blog=> { %>
               <div class="col-md-4 mb-4">
                  <div class="card h-100 shadow-sm">
                     <img src="<%= blog.coverImageUrl %>" class="card-img-top" alt="Cover image for <%= blog.title %>">
                     <div class="card-body d-flex flex-column">
                        <h5 class="card-title">
                           <%= blog.title %>
                        </h5>
                        <a href="/blog/<%= blog._id %>" class="btn btn-outline-primary mt-auto">Read More</a>
                     </div>
                  </div>
               </div>
               <% }) %>
         </section>
      </main>

      <%- include('./partials/scripts') %>
</body>

</html>