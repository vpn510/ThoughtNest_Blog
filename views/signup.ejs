<!DOCTYPE html>
<html lang="en">

<head>
   <%- include('./partials/head') %>
      <title>Signup</title>

      <!-- Lottie Player for animated banner -->
      <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>

      <style>
         :root {
            --bs-primary: #80ff80;
         }

         body {
            background-color: #f8f9fa;
         }

         .animated-banner {
            width: 100%;
            height: 180px;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 2rem;
         }

         .card {
            border: none;
            border-radius: 0.75rem;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
         }

         .btn-primary {
            background-color: var(--bs-primary);
            border-color: var(--bs-primary);
            color: #212529;
            font-weight: 500;
         }

         .btn-primary:hover {
            background-color: #66cc66;
            border-color: #66cc66;
         }

         .form-control:focus {
            border-color: var(--bs-primary);
            box-shadow: 0 0 0 0.2rem rgba(128, 255, 128, 0.25);
         }

         .toast-success {
            position: fixed;
            top: 1rem;
            right: 1rem;
            background-color: #80ff80;
            color: #212529;
            padding: 1rem 1.5rem;
            border-radius: 0.5rem;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            animation: fadeIn 0.5s ease-out;
            display: none;
            z-index: 9999;
         }

         @keyframes fadeIn {
            from {
               opacity: 0;
               transform: translateY(-20px);
            }

            to {
               opacity: 1;
               transform: translateY(0);
            }
         }
      </style>
</head>

<body>
   <%- include('./partials/nav') %>

      <!-- Cartoon-style animated banner -->
      <div class="animated-banner">
         <lottie-player src="https://assets2.lottiefiles.com/packages/lf20_1pxqjqps.json" background="transparent"
            speed="1" style="width: 200px; height: 180px;" loop autoplay>
         </lottie-player>
      </div>

      <!-- Signup Form -->
      <div class="container py-4">
         <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
               <div class="card p-4">
                  <h2 class="text-center mb-4">Create Your Account</h2>
                  <form action="/user/signup" method="POST">
                     <div class="mb-3">
                        <label for="fullName" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="fullName" name="fullName" required>
                     </div>
                     <div class="mb-3">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                     </div>
                     <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                     </div>
                     <button type="submit" class="btn btn-primary w-100">Signup</button>
                  </form>
               </div>
            </div>
         </div>
      </div>

      <!-- Success Toast -->
      <div class="toast-success" id="successToast">
         ðŸŽ‰ Signup successful! Welcome aboard.
      </div>

      <%- include('./partials/scripts') %>

         <!-- Toast Trigger Script -->
         <script>
            window.addEventListener('DOMContentLoaded', () => {
               const params = new URLSearchParams(window.location.search);
               if (params.get('success') === 'true') {
                  const toast = document.getElementById('successToast');
                  toast.style.display = 'block';
                  setTimeout(() => {
                     toast.style.display = 'none';
                  }, 4000);
               }
            });
         </script>
</body>

</html>